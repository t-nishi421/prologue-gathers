.center
  .center__over-color
    .menu
      .menu__left
        .account-edit-left
          .account-edit-left__link
            = link_to "トップページに戻る", :back, class: 'Button'
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'Button'
      .menu__right
        .account-edit-right
          %h1 アカウントの編集
          .account-edit-right__image image
          = form_for(current_user) do |f|
            .account-edit-right__icon{style: "background-image: url(#{asset_path current_user.image})"}
              = f.label :image, class: 'upload-image' do
                = icon('fa', 'camera')
                = f.file_field :image, class: 'image-icon'
            .FormField
              .FormField__label--normal
                = f.label :name
              .FormField__input--normal
                = f.text_field :name, autofocus: true
            .FormField
              .FormField__label--normal
                = f.label :email
              .FormField__input--normal
                = f.email_field :email
            = f.submit "更新する", class: 'Button'
