- books.each do |b|
  = link_to book_path(b.id), class: "book" do
    .book__body
      .book__body__white
      .book__body__top-color
      = image_tag 'book.png', alt: '本', class: "book__body__book-line"
    .book__name
      - if b.title.length > 8
        .book__name--hover
          = "#{b.title[0,7]}…"
      - else
        = b.title
    - if b.completion == true
      .book__state.book__state--completion
        完結
    - else
      - if b.rental == false
        .book__state.book__state--there
          貸出可
      - else
        .book__state.book__state--not-there
          貸出中
