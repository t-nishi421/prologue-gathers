- books.each do |b|
  = link_to book_path(b.id), class: "book" do
    .book__body
      .book__body__image
        image
      .book__body__progress
        未完
    .book__name
      = b.title
    - if b.rental == false
      .book__state.book__state--there
        貸出可
    - else
      .book__state.book__state--not-there
        貸出中
