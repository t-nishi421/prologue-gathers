.show-wrapper
  = render partial: 'book-top', locals: { book: @book }
  .stories
    = render partial: 'story', locals: { texts: @book.texts }
    = form_with model: @book, local: true do |f|
      .next-story
        .chapter-items
          .cover__text__chapter
            .cover__text__chapter__exp
              = "#{@chapter}章"
            = f.text_field :chapter, placeholder: '章題を入力', class: 'cover__text__chapter__textbox'
          = f.check_box :completion, value: 1, class: "check-box"
          .check-box-msg ：最終章
        .text__exp.text__exp__edit
          本文
        = f.text_area :text, placeholder: '本文を入力', class: 'text__textbox__edit'
        .button-cover
          = link_to return_path(@book.id), class: "button-cover__return-button" do
            返却する
          = f.submit value: "投稿する", class: 'button-cover__edit-button'
