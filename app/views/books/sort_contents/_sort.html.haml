= form_with(url: search_books_path, local: true, method: :get) do |f|
  .SortLabel__select{"data-sort" => @sort}
    = f.collection_select :sort, Sort.all, :code, :name
    = f.hidden_field :keyword, value: @keyword
    = f.hidden_field :rental_state, value: @rental_state_hidden_params
    - if @book_icon_hidden_params != nil
      - @book_icon_hidden_params.each do |icon_id|
        = hidden_field_tag 'book_icon[]', icon_id
    - if @book_color_hidden_params != nil
      - @book_color_hidden_params.each do |color_id|
        = hidden_field_tag 'book_color[]', color_id
  = f.submit "sort", class: "SortSubmit"