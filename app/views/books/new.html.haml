.new-wrapper
  = form_with model: @book, local: true do |f|
    .cover
      .cover__text
        .cover__text__title
          .cover__text__title__exp
            タイトル
          -# .cover__text__title__textbox
          -# %input{type: 'text', placeholder: 'text', class: 'cover__text__title__textbox'}
          = f.text_field :title, placeholder: '本のタイトルを入力', class: 'cover__text__title__textbox'
        .cover__text__chapter
          .cover__text__chapter__exp
            1章
          -# .cover__text__chapter__textbox
          -# %input{type: 'text', placeholder: 'text', class: 'cover__text__chapter__textbox'}
          = f.text_field :chapter, placeholder: '章題を入力', class: 'cover__text__chapter__textbox'
      .cover__image
    .text
      .text__exp
        本文
      -# .text__textbox
      -# %textarea{placeholder: 'text area', class: 'text__textbox'}
      = f.text_area :text, placeholder: '本文を入力', class: 'text__textbox'
      -# .text__post
      = f.submit value: '投稿する', class: 'text__post'