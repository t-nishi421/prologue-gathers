.new-wrapper
  = form_with model: @book, local: true do |f|
    .cover
      .cover__text
        .cover__text__title
          .cover__text__title__exp
            タイトル
          = f.text_field :title, placeholder: '本のタイトルを入力', class: 'cover__text__title__textbox'
        .cover__text__chapter
          .cover__text__chapter__exp
            1章
          = f.text_field :chapter, placeholder: '章題を入力', class: 'cover__text__chapter__textbox'
      .cover__image
        .cover__image__white
        .cover__image__top-color
        = image_tag 'icons/1_heart.png', alt: 'ハート', class: 'cover__image__top-icon'
        = image_tag 'book.png', alt: '本', class: 'cover__image__book-line'
        .cover__image__button-box
          %label{for: "icon"}
            = icon('fa', 'plus')
          %label{for: "color"}
            = icon('fa', 'paint-brush')
        %span
          = check_box_tag :icon
          .cover__image__icon-menu
            %ul.icon
              %li
                L
              %li
                G
              %li
                T
              %li
                M
        %span
          = check_box_tag :color
          .cover__image__color-menu
            %ul.color
              - @colors.each_with_index do |color, index|
                %label{for: "book_color#{color.id}"}
                  %li{ style: "background-color:#{color.color}", class: "get-book-color" }
                    %div 　
                - if index == 0
                  %input{type: "radio", name: "book_color", value: color.id, id: "book_color#{color.id}", class: "change-book-color", style: "color:#{color.color}", checked: "checked"}
                - else
                  %input{type: "radio", name: "book_color", value: color.id, id: "book_color#{color.id}", class: "change-book-color", style: "color:#{color.color}"}
    .text
      .text__exp
        本文
      = f.text_area :text, placeholder: '本文を入力', class: 'text__textbox'
      = f.submit value: '投稿する', class: 'text__post'
