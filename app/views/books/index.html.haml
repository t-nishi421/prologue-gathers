.IndexWrapper
  .SortLabel
    = render 'books/sort_contents/sort'
    .SortLabel__radio
      = form_with(url: search_books_path, local: true, method: :get) do |f|
        %h1 詳細検索
        %h2 本の状態
        %table
          %tr
            %th
              = f.check_box :book_state, {multiple: true, include_hidden: false, class: 'CheckBox', id: 'book_state[1]'}
            %td
              .CanRental 貸出可
          %tr
            %th
              = f.check_box :book_state, {multiple: true, include_hidden: false, class: 'CheckBox', id: 'book_state[2]'}
            %td
              .CanNotRental 貸出中
          %tr
            %th
              = f.check_box :book_state, {multiple: true, include_hidden: false, class: 'CheckBox', id: 'book_state[3]'}
            %td
              .Complete 完結
        = f.hidden_field :keyword, value: @keyword
        = f.hidden_field :sort, value: @sort
        = f.submit value: '検索する'
  .MainLabel
    .TopItems
      .TopItems__searchedTitle
        = @search_title
      .TopItems__searchedCount
        = "#{@search_count}冊の本が見つかりました"
    .main
      - @books.each do |books|
        .main__frame
          = render partial: 'book', locals: { b: books }
